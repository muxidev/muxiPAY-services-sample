<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_no_action_bar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sample_splash_init</item>
        <item name="colorPrimaryDark">@color/sample_splash_end</item>
        <item name="colorAccent">@color/sample_splash_init</item>
        <item name="android:windowBackground">@color/background_default_color</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sample_splash_init</item>
        <item name="colorPrimaryDark">@color/sample_splash_end</item>
        <item name="colorAccent">@color/sample_splash_init</item>
        <item name="android:windowBackground">@color/background_default_color</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="btnTheme">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@drawable/button_text</item>
        <item name="android:layout_marginTop">@dimen/main_margin_start_end</item>
        <item name="android:layout_marginStart">@dimen/main_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/main_margin_start_end</item>
        <item name="android:layout_height">@dimen/main_btn_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/sample_splash_init</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">@color/sample_splash_init</item>
    </style>

</resources>
